.navbar-inner
  background-color #EFEFEF
  background-image none
  box-shadow none

.navbar .brand
  font-size 70px
  text-shadow 1px 1px 0 #FFFFFF
  color #F22B48
  font-family 'Neuton', serif

#mf-input
  display block
  width 90%
  height auto
  margin 120px 0
  padding 10px
  font-size 32px
  line-height 42px
  border 3px solid #CCC
  box-shadow 0 0 5px #EFEFEF

  &.placeholder-on
    color #999

  .accent
    color #000
    border 1px solid #CCC
    padding 4px
    margin 2px
    font-size 1.1em

.selection-popup
  border 1px #CCC solid
  padding 10px
  position absolute
  width 200px
  background-color #EFEFEF
  outline none

  .selected-header
    font-size 2.5em
    text-align center
    padding 10px 5px
    line-height 1em

    .current-selected-callout
      font-weight bold

  .message-type-header
    font-size 1.8em
    font-weight bold
    margin 10px 5px

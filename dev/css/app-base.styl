#mf-input
  display block
  width 90%
  height auto
  margin 60px 0
  padding 10px
  font-size 42px
  line-height 52px
  border 3px solid #CCC
  box-shadow 0 0 5px #EFEFEF

  &.placeholder-on
    color #999

  .accent
    color #000
    border 1px solid #CCC
    padding 4px
    margin 2px
    font-size 1.1em

.selection-popup
  border 1px #CCC solid
  padding 10px
  position absolute
  width 200px
  background-color #EFEFEF
  outline none

  .selected-header
    font-size 2.5em
    text-align center
    padding 10px 5px
    line-height 1em

    .current-selected-callout
      font-weight bold

  .message-type-header
    font-size 1.8em
    font-weight bold
    margin 10px 5px
